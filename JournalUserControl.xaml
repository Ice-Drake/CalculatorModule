<UserControl x:Class="MultiDesktop.JournalUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="530" Width="410">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="25" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>

        <Label Name="DateLabel" Grid.Row="0" Grid.Column="1" />
        <RichTextBox Name="DescTextBox" Grid.Row="1" Grid.ColumnSpan="3" Height="480" Width="410" />
        <Button Name="PrevButton" Grid.Row="2" Grid.Column="0" Content="&lt;" HorizontalAlignment="Left" VerticalAlignment="Center" Width="25" Click="PrevButton_Click" />
        <TextBox Name="PageNumField" IsEnabled="False" Grid.Row="2" Grid.Column="1" Text="1" />
        <Button Name="NextButton" Grid.Row="2" Grid.Column="2" Content="&gt;" HorizontalAlignment="Right" VerticalAlignment="Center" Width="25" Click="NextButton_Click" />
    </Grid>
</UserControl>
